<!DOCTYPE html>
<html lang="en">

<head>
  <title>New Quiz</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/quizzes_new.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>

<body>
  <h1>Make a New Quiz</h1>
  <section id = "Entries">
    <form action="/quizzes/new" method="POST">
      <div class="form-group">
        <input maxlength="255" class="form-control" id="Title" name = "title" placeholder="Title" type="text" required></input>
      </div>
      <div class="form-group">
        <input type="text" required maxlength="255" class="form-control" id="Subject" name = "subject" placeholder="Subject">
      </div>
      <div class="custom-control custom-checkbox my-1 mr-sm-2">
        <input type="checkbox" name = "private" class="custom-control-input" id="customControlInline">
        <label class="custom-control-label"  for="customControlInline">Private?</label>
      </div>
      <div></div>
      <section id = "Questions">

      </section>
      <input class="btn btn-success" id="add_question" type="button" value="+">
      <input class="btn btn-danger" id="remove_question" type="button" value="-">
      <div class="form-group">
        <input type="url" maxlength="255" class="form-control" name = "image_url" id="image_url" placeholder="Quiz Image URL (optional)">
      </div>
      <div class="form-group">
        <input type="text" required maxlength="255" class="form-control" name = "custom_url" id="custom_url" placeholder="Custom Quiz URL">
        <input class="btn btn-primary" id="random_url_button" type="button" value="Random URL">
      </div>
      <button type="submit" class="btn btn-primary" id="submit">Submit</button>
      <button class="btn btn-primary" id ="cancel">Cancel</button>

    </form>
  </section>

      <!-- Bootstrap JS -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
